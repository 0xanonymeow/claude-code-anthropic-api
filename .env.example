# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=true
RELOAD=true

# Claude Code SDK Configuration
# Path to Claude Code SDK executable (if not in PATH)
CLAUDE_CODE_PATH=

# Claude Code SDK timeout and retry settings
CLAUDE_CODE_TIMEOUT=300
CLAUDE_CODE_MAX_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
# Optional: Log to file instead of stdout
# LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# CORS Configuration for local development
ALLOW_ORIGINS=["*"]
ALLOW_CREDENTIALS=true
ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOW_HEADERS=["*"]

# API Configuration
API_TITLE="Claude Code Anthropic API"
API_DESCRIPTION="FastAPI server providing Anthropic's /v1/messages API using Claude Code SDK"
API_VERSION="1.0.0"

# Request/Response Configuration
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=300

# Health Check and Metrics Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true